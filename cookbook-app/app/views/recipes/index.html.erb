<h1>Browse Our Recipes:</h1>

<div class="row">
  
<% @recipes.each do |recipe| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <a href="/recipes/<%= recipe.id %>"><img class="index-images" src="<%= recipe.photo_url %>" alt="..." ></a>
      <div class="caption">
        <a href="/recipes/<%= recipe.id %>"><h3><%= recipe.title %></h3></a>
        <p><%= recipe.author %></p>
        <p><a href="/recipes/<%= recipe.id %>/edit" class="btn btn-info" role="button">Edit</a> <a data-confirm="You are about to delete the recipe for <%= recipe.title %>. Are you sure you want to do that?" href="/recipes/<%= recipe.id %>" data-method="delete" rel="nofollow" class="btn btn-danger" role="button">Delete</a></p>
      </div>
    </div>
    </div>

<% end %>

 </div>
  


<h2><a href="/recipes/new">Create a new Recipe</a></h2>